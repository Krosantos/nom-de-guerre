{
    "name": "nom-de-guerre",
    "version": "1.0.0",
    "main": "electron/index.js",
    "repository": "https://github.com/Krosantos/nom-de-guerre",
    "author": "Tymko Tecca <tymko.tecca@gmail.com>",
    "license": "UNLICENSED",
    "scripts": {
        "build": "npx webpack",
        "clean": "node electron/cleanFolders",
        "compile-mac": "yarn build && node electron/prebuild && electron-packager ./staging \"Nom de Guerre\" --asar --icon=./icon --packageManager=yarn --appCategoryType=public.app-category.utilities --out=compiled/ --platform=darwin --no-tmpdir --overwrite",
        "compile-windows": "yarn build && node electron/prebuild && electron-packager ./staging \"Nom de Guerre\" --asar --icon=./icon --packageManager=yarn --out=compiled/ --platform=win32 --no-tmpdir --overwrite",
        "dev": "webpack-dev-server --mode development",
        "docker": "docker build -t ndg . && docker run -p 4000:4000 ndg",
        "lint": "eslint .",
        "serve": "nodemon src/server/index.js --exec \"node -r dotenv/config -r @babel/register\"",
        "start": "concurrently --kill-others \"yarn dev\" \"yarn window\"",
        "window": "cross-env FROM_LOCAL=true electron ."
    },
    "dependencies": {
        "axios": "^0.18.0",
        "dotenv": "^6.0.0",
        "dotenv-webpack": "^1.5.7",
        "express": "^4.16.3",
        "lodash": "^4.17.10",
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "react-redux": "^6.0.0",
        "recompose": "^0.30.0",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "styled-components": "^4.1.3",
        "styled-system": "^3.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.2.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "babel-plugin-module-resolver": "^3.1.1",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.0",
        "electron": "^4.0.1",
        "electron-devtools-installer": "^2.2.4",
        "electron-packager": "^13.0.1",
        "eslint": "^5.12.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.8.2",
        "file-loader": "^3.0.1",
        "ncp": "^2.0.0",
        "nodemon": "^1.18.4",
        "style-loader": "^0.23.1",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.9"
    }
}
